<div class="table">
    <%= form_with(model: @record, class: "p-3 mb-3 rounded", local: true) do |f| %>
      <div class="form-group">
        <%= f.label :user_id %>
        <%= f.text_field :user_id, placeholder: current_user.id, value: current_user.id, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :activity_id %>
        <%= f.text_field :activity_id, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :duartion %>
        <%= f.text_field :duration, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :total_calories %>
        <%= f.text_field :total_calories, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :activity_date %>
        <%= f.date_field :activity_date, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.submit class: "btn btn-secondary" %>
        </div>
     </div>
   <% end %>
 </div>

<br>
<div class="row justify-content-center">
 <%= link_to '[ Cancel and return to records listing ]', records_path, class: "text-info" %>
</div>
