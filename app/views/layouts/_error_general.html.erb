  <div class="alert alert-info text-center" id="flash">
    <ul>
      <li class="indent"><%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %><br>
      <% resource.errors.full_messages.each do |message| %>
        &nbsp<%= message %><a href="#" data-dismiss="alert" class="close">&nbsp Ã—</a></li><br>
      <% end %>
    </ul>
  </div>
<% end %>
