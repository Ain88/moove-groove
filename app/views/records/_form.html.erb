<div class="table">
    <%= form_with(model: @record, class: "p-3 mb-3 rounded", local: true) do |f| %>
    <%= render "/layouts/error_general", resource: @record %>
      <div class="form-group">
        <%= f.label :activity_id %>
        <%= f.collection_select :activity_id, Activity.all, :id, :name, {prompt: "Select"}, { class: "form-control", required: true } %>
      </div>
      <div class="form-group">
        <%= f.label :duration %>
        <%= f.select :duration, [["15 minutes", "15"], ["30 minutes", "30"], ["45 minutes", "45"], ["1 hour", "60"]], {prompt: "Select"}, { class: "form-control", required: true } %>
      </div>
      <div class="form-group">
        <%= f.label :activity_date %>
        <%= f.date_field :activity_date, { class: "form-control", required: true } %>
      </div>
      <div class="form-group">
          <%= f.submit class: "btn btn-secondary" %>
        </div>
     </div>
   <% end %>
 </div>

<div class="row justify-content-center">
 <%= link_to '[ Cancel and return to my activity record page ]', records_path, class: "text-info" %>
</div>
